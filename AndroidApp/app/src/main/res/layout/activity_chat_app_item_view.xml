<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <!-- Left Message -->
    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_left_msg_text_view"
                android:layout_width="wrap_content"
                android:layout_weight="75"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"
                android:text="Left Message has a maximum width of 75% from the left end"
                android:padding="12dp"
                android:textSize="16dp"
                android:textColor="#212121"
                android:background="@drawable/left_background"
                android:elevation="2dp"
                android:autoLink="web"
                android:textColorLink="#FF227CAB">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25">

        </LinearLayout>

    </LinearLayout>

    <!-- Right Message -->
    <LinearLayout

        android:id="@+id/chat_right_msg_layout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25">

        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:orientation="vertical">

            <TextView
                android:id="@+id/chat_right_msg_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="75"
                android:layout_gravity="right"
                android:layout_alignParentEnd="false"
                android:text="Right Message has a maximum width of 75% from the right end"
                android:background="@drawable/right_background"
                android:textColor="#212121"
                android:padding="12dp"
                android:textSize="16dp"
                android:elevation="2dp">
            </TextView>
        </LinearLayout>



    </LinearLayout>

    <!-- Yes No Buttons -->
    <LinearLayout
        android:id="@+id/chat_yes_no_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/left_background">

            <TextView
                android:id="@+id/chat_yes_no_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="#212121"
                android:padding="12dp"
                android:textSize="16dp"
                android:elevation="2dp"
                android:text="Central Question"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/chat_yes_no_btn_yes"
                    android:background="@drawable/btn_yes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#212121"
                    android:text="Ja"

                    />
                <Button
                    android:id="@+id/chat_yes_no_btn_no"
                    android:background="@drawable/btn_no"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:layout_margin="10dp"
                    android:text="Nein"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25">

        </LinearLayout>
    </LinearLayout>

    <!-- Duration Slider -->
    <LinearLayout
        android:id="@+id/chat_slider_duration_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="75"
            android:background="@drawable/left_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_slider_duration_question_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="2dp"
                android:padding="12dp"
                android:text="Question for Duration"
                android:textColor="#212121"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/chat_slider_duration_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:padding="12dp"
                android:text="X Stunden Y Minuten"
                android:textColor="#212121"
                android:textSize="16dp" />

            <SeekBar
                android:id="@+id/chat_slider_duration_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="9"
                android:progress="2"
                android:padding="12dp" />

            <Button
                android:id="@+id/chat_slider_duration_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btn_yes"
                android:text="Ok"
                android:textColor="#212121" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>